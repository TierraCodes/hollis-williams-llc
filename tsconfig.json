{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/layout.js", "app/Pages/Dashboard.js", "app/Components/dashboard/UpcomingJobs.js", "app/Pages/Jobs.js", "app/Pages/Calendar.js", "app/Pages/Contact.js", "app/Pages/Invoices.js", "app/Pages/Customers.js", "app/page.js", "app/Components/dashboard/RevenueChart.js"],
  "exclude": ["node_modules"]
}
