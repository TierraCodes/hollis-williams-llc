{
  "name": "Job",
  "type": "object",
  "properties": {
    "customer_id": {
      "type": "string",
      "description": "Reference to Customer entity"
    },
    "customer_name": {
      "type": "string"
    },
    "service_address": {
      "type": "string"
    },
    "service_type": {
      "type": "string",
      "enum": [
        "mowing",
        "trimming",
        "edging",
        "mulching",
        "leaf_removal",
        "spring_cleanup",
        "fall_cleanup",
        "aeration",
        "seeding",
        "landscape_installation",
        "tree_service",
        "other"
      ]
    },
    "scheduled_date": {
      "type": "string",
      "format": "date"
    },
    "status": {
      "type": "string",
      "enum": [
        "scheduled",
        "in_progress",
        "completed",
        "cancelled"
      ],
      "default": "scheduled"
    },
    "estimated_duration": {
      "type": "number",
      "description": "Estimated hours to complete"
    },
    "assigned_to": {
      "type": "string",
      "description": "Team member assigned"
    },
    "notes": {
      "type": "string"
    },
    "completion_notes": {
      "type": "string",
      "description": "Notes added after job completion"
    }
  },
  "required": [
    "customer_id",
    "customer_name",
    "service_address",
    "service_type",
    "scheduled_date"
  ]
}